<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!--  기본 배경 색상  -->
	<SolidColorBrush x:Key="SerialBackgroundColor" Color="#161616" />

	<!--  기본 테두리 색상  -->
	<SolidColorBrush x:Key="SerialBorderColor" Color="#000000" />

	<!--  내부 구분자 색상  -->
	<SolidColorBrush x:Key="SerialSplitterColor" Color="#f0f0f0" />

	<!--  기본 폰트 색상  -->
	<SolidColorBrush x:Key="SerialDefaultForeground" Color="#ffffff" />

	<!--  강조 폰트 색상  -->
	<SolidColorBrush x:Key="SerialPointForeground" Color="#00cc00" />

	<!--  마우스 Over시 배경 색상  -->
	<SolidColorBrush x:Key="SerialMouseOverBackground" Color="#303030" />

	<!--  콤보 박스 팝업 배경 색상  -->
	<SolidColorBrush x:Key="SerialComboBoxPopupColor" Color="#2a2a2a" />

	<!--  콤보 박스 팝업 상단 구분자 색상  -->
	<SolidColorBrush x:Key="SerialComboBoxSplitterColor" Color="#505050" />

	<!--  콤보 박스 폴리곤 색상  -->
	<SolidColorBrush x:Key="SerialComboBoxPolygonColor" Color="#6f6f6f" />

	<!--  상태 아이템 배경 색상  -->
	<SolidColorBrush x:Key="SerialStatusBackgroundColor" Color="#252525" />

	<!--  버튼 배경 색상  -->
	<SolidColorBrush x:Key="SerialButtonBackgroundColor" Color="#2a2a2a" />

	<!--  버튼 테두리 색상  -->
	<SolidColorBrush x:Key="SerialButtonBorderColor" Color="#000000" />

</ResourceDictionary>